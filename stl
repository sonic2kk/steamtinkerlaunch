TWEAKTEMPLATECFG="$TWEAKTEMPLATEDIR/$AID.conf"												# Tweak Template autowritten when CREATETWEAKS is set
PFTWEAKCFG="$PFTWEAKDIR/$AID.conf"
LUTWEAKCFG="$LUTWEAKDIR/$AID.conf"	
}
